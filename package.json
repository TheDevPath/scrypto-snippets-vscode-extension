{
  "name": "scrypto-snippets",
  "displayName": "Scrypto Snippets",
  "description": "Snippets for Rust Scrypto Library",
  "version": "0.0.4",
  "publisher": "DevPath",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheDevPath/scrypto-snippets-vscode-extension"
  },
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Snippets"
  ],
  "icon": "images/Scrypto-Icon-Round.png",
  "activationEvents": [
    "onCommand:scrypto-snippets.scryptoSnippets",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "rust",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "scrypto-snippets.scryptoSnippets",
        "title": "Scrypto Snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
